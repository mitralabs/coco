# Use Python slim as the base image
FROM nvidia/cuda:12.2.2-cudnn8-devel-ubuntu22.04

# Install necessary apt packages
RUN apt-get update && apt-get install -y \
    ffmpeg \
    build-essential \
    cmake \
    curl \
    git \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Clone the whisper.cpp repository
RUN git clone https://github.com/ggerganov/whisper.cpp.git

# Set the working directory
WORKDIR /whisper.cpp

# This is an earlier commit that works great on this machine. Just tried (2024-12-12) the latet commit and it failed.
RUN git checkout fdbfb460ed546452a5d53611bba66d10d842e719

# Build the project
RUN make clean
RUN GGML_CUDA=1 make -j

# CD to the root directory
WORKDIR /

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY .env .

WORKDIR /app

CMD ["python3", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]